#!/bin/bash
# script to check links

# Franklin's built-in link checker
julia --project="@." --optimize=0 --eval "using Franklin: verify_links
    verify_links()" | grep --invert-match \
        --regexp "mailto:" \
        --regexp "æµ£"

# broken-link-checker: https://github.com/stevenvachon/broken-link-checker
# https://github.com/JuliaLang/www.julialang.org#looking-for-broken-links
blc="$(dirname "$0")/node_modules/.bin/broken-link-checker"
$blc https://stephen-huan.github.io/ --recursive --ordered \
    --exclude "algorithm-library"

