#!/bin/bash
# script to deploy the site to Cloudflare pages

main_branch="master"
build_branch="build"
push_branch="cloudflare-pages"
commit="$(git rev-parse --short HEAD)"

path="$(dirname "$0")"
inline_style="$path/../src/inline-style"

git checkout "$build_branch" &&
# sync changes
git merge --no-verify "$main_branch" &&

# build site
julia --project="@." --optimize=0 --eval "using Franklin: optimize
    optimize(clear=true, prerender=true, minify=false)" &&
# post-processing
poetry --directory "$path" run python "$inline_style" --verbose __site &&
npx prettier --write __site &&

# publish
git add --force __site &&
git commit --message "Deploying to $push_branch from @ $commit" &&
# https://gist.github.com/cobyism/4730490
git subtree push --prefix __site origin "$push_branch"

git checkout "$main_branch"

