#!/bin/bash
# script to validate html/css/svg, ignoring known issues

# https://docs.oracle.com/javase/7/docs/api/java/util/regex/Pattern.html
vnu="$(dirname "$0")/vnu"
"$vnu" \
    --filterpattern \
'.*Self-closing tag syntax in text/html documents is widely discouraged.*'\
'|.*Bad value “” for attribute “columnspacing” on element “mtable”.*'\
'|.*Element “mi” not allowed as child of element “m(i|o)” in this context.*'\
'|.*Element “mpadded” not allowed as child of element “mi” in this context.*'\
    "$@"

