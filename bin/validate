#!/bin/bash
# script to validate html/css/svg, ignoring known issues

vnu="$(dirname "$0")/vnu"
"$vnu" "$@" |& grep --invert-match \
    --regexp 'error: The "align" attribute on the "td" element is obsolete.' \
    --regexp 'error: The "align" attribute on the "th" element is obsolete.' \
    --regexp 'error: Bad value "" for attribute "columnspacing" on element "mtable".' \
    --regexp 'element "mi"' \
    --regexp 'element "mo"'

